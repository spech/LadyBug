<h1> Issue list </h1>
<table class="table table-hover table-striped">
  <thead>
	<TR> 
 		<TH> Issue ID </TH> 
 		<TH> Title </TH> 
 		<TH> Actions </TH>
  </TR>
  </thead>
  	<% @project.issues.order(:state).each do |issue| %>
  		<TR>
  			<TH> <%= link_to issue.id, project_issue_path(@project,issue) %> </TH>
  			<TH> <%= link_to issue.title, project_issue_path(@project,issue) %> </TH>
  			<TH> 
  				<div class="pull-right">
  				<%= link_to 'edit', edit_project_issue_path(@project,issue), class: "btn btn-info btn-mini" %>  
  				<%= link_to(project_issue_path(@project,issue), method: :delete, data: {confirm: "Really delete the issue?"}, class: "btn btn-danger btn-mini") do %>
  					<i class="icon-trash icon-white"></i>
				<%end%>
			</div>
  			</TH>
  		</TR>
  	<%end%>
</table>
<%= link_to "Create a New Issue", new_project_issue_path(@project), class: "btn btn-primary"%>
