<ul class="pager pager-inverse">
  <li><%= link_to "Issues list", project_path(@issue.project) %></li>
  <li class="previous"><%= link_to 'Previous', project_issue_path(@project,@issue.prev) %></li>
  <li class="next"><%= link_to 'Next', project_issue_path(@project, @issue.next)%></li>
</ul>

<legend>
	<span class='<%= state_label(@issue.state_name)%>'>
		<%= @issue.state_name %>
	</span> 
	<%=@issue.title%>
</legend>
<div class="progress progress-info progress-striped active">
  <div class="bar" style="width: <%= progress(@issue.state_name)%>"><%= progress(@issue.state_name)%> Done</div>
</div>
<%= render partial: 'change_state' %>
<%= render partial: 'versions'%>
Severity: <%= @issue.severity %> <br/>
Impact: <%= @issue.impact %>
<div class="accordion" id="accordion2">
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" href="#collapseOne">
        Description:
      </a>
    </div>
    <div id="collapseOne" class="accordion-body collapse in">
      <div class="accordion-inner">
        <%= @issue.description %>
      </div>
    </div>
  </div>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" href="#collapseTwo">
        Analysis:
      </a>
    </div>
    <div id="collapseTwo" class="accordion-body collapse">
      <div class="accordion-inner">
        <%= @issue.analysis %>
      </div>
    </div>
  </div>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" href="#collapseThree">
        Correction:
      </a>
    </div>
    <div id="collapseThree" class="accordion-body collapse">
      <div class="accordion-inner">
        <%= @issue.correction %>
      </div>
    </div>
  </div>
</div>

<%= render partial: 'references' %>



<%= link_to 'edit', edit_project_issue_path(@project, @issue), class: "btn btn-info btn-mini" %>
<%= link_to(project_issue_path(@project, @issue), method: :delete, data: {confirm: "Really delete the issue?"}, class: "btn btn-danger btn-mini") do %>
  	<i class="icon-trash icon-white"></i>
<%end%>
<br />

<div>
<legend>Notes:</legend>
	<%= render partial: 'notes/form' %>
	<%= render partial: 'notes/note', collection: @issue.notes %>
</div>