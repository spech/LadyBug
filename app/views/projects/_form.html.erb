<%= form_for @project do |f| %>
	<ul>
  		<% @project.errors.full_messages.each do |error| %>
    		<li><%= error %></li>
  		<% end %>
  	</ul>
    	<%= f.label :name, class: 'strong' %>
    	<%= f.text_field :name, placeholder: "Enter project name", class: "span12" %>
    	<%= f.label :description %>
    	<%= f.text_area :description, placeholder: "Enter project description", class: "span12" ,rows: "9" %>
    	<%= f.submit 'Save', class: "btn btn-primary" %>
      <%= link_to 'Cancel', projects_path, class: "btn" %>
<% end %>