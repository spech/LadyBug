<legend><%=@project.name%></legend>

<p><%= @project.description %></p>

<%= link_to 'edit', edit_project_path(@project), class: "btn btn-info btn-mini" %>
<%= link_to(project_path(@project), method: :delete, data: {confirm: "Really delete the project?"}, class: "btn btn-danger btn-mini") do %>
  	<i class="icon-trash icon-white"></i>
<%end%>
<br />
<legend><%=@project.name%>'s versions</legend>
<ul class="inline">
	<%= render partial: 'versions/version', collection: @project.versions %>
</ul>
<%= render partial: 'versions/form' %>

<%= link_to 'Back', projects_path %>